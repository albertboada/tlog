<h3>Total spent time in this project: <%= @project.spent '%hours%h %minutes%m %seconds%s' %></h3>

<% if @project.currentlog %>
<!--   <h3>Current log:</h3>
  <dl class="dl-horizontal">
    <dt>Start:</dt><dd><%= @project.currentlog.start %></dd>
    <dt>Spent:</dt><dd><%= @project.currentlog.spent '%hours%h %minutes%m %seconds%s' %></dd>
  </dl> -->

<% else %>
  <div class="hero-unit">
    <p>You are currently not logging</p>
    <%= link_to 'Start logging!', log_path(@project), :method => 'post', :class => 'btn btn-success btn-large' %>
  </div>
<% end %>

<h3>Time Logs</h3>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Start</th>
      <th>Finish</th>
      <th>Comment</th>
      <th>Spent time</th>
      <th>Actions</th>
    </tr>
  </thead>
  <% @project.logs.reverse.each_with_index do |log, i| %>
    <tr <%= !log.finish ? 'class=current' : '' %>>
      <td><%= i + 1 %></td>
      <td><%= log.start %></td>
      <td>
        <% if log.finish %>
          <%= log.finish %>
        <% else %>
          -
        <% end %>
      </td>
      <td><%= log.comment %></td>
      <td>
        <%= log.spent '%hours%h %minutes%m %seconds%s' %>
      </td>
      <td>
        <% if log.finish %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_log_path(log), :class => 'btn btn-mini'
          %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                log_path(log),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-mini btn-danger'
          %>
        <% else %>
          <%= link_to 'I\'m done!!', stop_log_path(@project.currentlog), :method => 'post',
            :data => { :confirm => 'Are you sure?' },
            :class => 'btn btn-warning' %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

