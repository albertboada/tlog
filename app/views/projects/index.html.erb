<%- model_class = Project -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <!-- <th><%= model_class.human_attribute_name(:id) %></th> -->
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:description) %></th>
        <th><%= model_class.human_attribute_name(:spent) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% current_user.projects.each do |project| %>
        <tr>
          <!-- <td><%= link_to project.id, project_path(project) %></td> -->
          <td><strong><%= link_to project.name, project %></strong></td>
          <td><%= project.description %></td>
          <td><%= project.spent '%hours%h %minutes%m %seconds%s' %></td>
          <td><%=l project.created_at %></td>
          <td>
            <div class="btn-group btn-group-sm">
              <%= link_to 'See logs!', project_path(project), :class => 'btn btn-info' %>
              <%= link_to t('.edit', :default => t("helpers.links.edit"))+' Project',
                          edit_project_path(project), :class => 'btn btn-sm btn-default' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy"))+' Project',
                          project_path(project),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-sm btn-danger' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to t('.new', :default => t("helpers.links.new"))+' Project',
            new_project_path,
            :class => 'btn btn-primary' %>
