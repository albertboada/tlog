<%= form_for @project, :html => { :class => '' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => '' %>
    <%= f.text_field :name, :class => 'form-control text_field' %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => '' %>
    <%= f.text_area :description, :class => 'form-control text_field' %>
  </div>

  <div class="">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                projects_path, :class => 'btn' %>
  </div>
<% end %>
